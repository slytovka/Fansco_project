<div class="page-header">
  <h1>Tennis Matches Forum
  <% if user_signed_in? %>
  <div class = "link">
    <%= link_to new_event_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Event
    <% end %>
    <% end %>
  </div>
  </h1>
</div>
<div class="col-md-5 col-md-offset-3">
<div class="table-responsive" id="tennis-table">
  <table class="table table-striped table-bordered table-hover" >
      <tr><td><h2>Choose Match</h2></td></tr>
      <%= content_tag_for(:tbody, @events) do |event| %>
          <tr><td><%= event.name %></td></tr>
          <tr><td><%= link_to event.content, event %></td></tr>
         <tr><td></td></tr>
      <% end %>
  </table>
</div>
</div>

